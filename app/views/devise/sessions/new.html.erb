<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg">
        <div class="card-body p-4">
          <h2 class="card-title text-center mb-4"><%= t(".sign_in") %></h2>
          <hr>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, "メールアドレス", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "パスワード", class: "form-label" %>
              <%= f.password_field :password, id: "password-field", autocomplete: "current-password", class: "form-control" %>
              <div class="form-check mt-2">
                <%= check_box_tag :show_password, nil, false, id: "show-password-checkbox", data: { target: "password-field" }, class: "form-check-input" %>
                <%= label_tag :show_password, "パスワードを表示する", class: "form-check-label" %>
              </div>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "ログイン情報を記憶する", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid gap-2">
              <%= f.submit t(".sign_in"), class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'devise_custom' %>